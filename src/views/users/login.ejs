<!DOCTYPE html>
<html lang="en">
<%-include('./partials/head.ejs')%>

    <body>
        <script src="/js/registrofront.js" defer></script>
        <section class="contenedorApp">
            <%-include('./partials/header.ejs')%>

                <main class="contenedorMain">

                    <img class="logLogo" src="/img/logoLog.png" alt="logLogo">

                    <% if(typeof loginErrors != "undefined") {%>
                        <ul class="listadoErrores">
                            <% loginErrors.forEach(error => { %>
                                <li>Â·
                                    <%= error.msg %>
                                </li>
                                <% }); %>
                        </ul>
                        <% } %>
                        <a class="link_reg" href="/users/registro">
                            Registrate!
                        </a>

                            <form action="/users/loguear" method="POST" class="cont__form">
                                <div>
                                    <label for="logMail">Mail</label>
                                    <input class="log--input" type="email" name="logMail" placeholder="doncerveza@dbirra.com.ar" id="logMail" autofocus>
                                    <small class ='formControl'></small>
                                </div>
                                <div>
                                    <label for="logPassword">Password</label>
                                    <input class="log--input" type="password" name="logPassword" placeholder="******" id="logPassword">
                                    <small class ='formControl'></small>    
                                </div>
                                <section class="recuerdame">
                                    <label for="recordarme">Recordarme</label>
                                    <input type="checkbox" name="recordarme" id="recordarme" class="checkbox--recordarme">
                                </section>
                                <input class="log--submit" type="submit" value="Ingresar">
                            </form>
                </main>

                <%-include('./partials/footer.ejs')%>
        </section>

    </body>

</html>